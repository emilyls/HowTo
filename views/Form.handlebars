<style>
  body {
    margin: 5em; 
  }
  header {
    text-align: right;
  }
  .forms {
    width: 100%;
  }
  label {
    display: inline-block;
    width: 100px;
    text-align: right;
  }
  input {
    width: 200px;
  }
  legend {
    font-weight: bold;
    font-size: 1em;
  }
  input {
    margin-bottom: 1em;
  }
  #button {
    width: 150px;
  }
